{
	"name": "isam-mapping-rules",
	"displayName": "isam-mapping-rules",
	"description": "Editor for ISAM mapping rules javascript files",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.isamMappingRuleEditor.configure",
		"onView:isamExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.isamMappingRuleEditor.configure",
				"title": "ISAM Configure"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ISAM Mapping Rules Editor configuration",
			"properties": {
				"username": {
					"type": "string",
					"default": "",
					"description": "Username used for ISAM authentication"
				},
				"password": {
					"type": "string",
					"default": "",
					"description": "Password used for ISAM authentication"
				},
				"environments": {
					"type": "object",
					"default": {}
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "isam-explorer",
					"title": "ISAM Explorer",
					"icon": "resources/package-explorer.svg"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "isamExplorer",
					"name": "ISAM explorer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.37",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"ftp": "^0.3.10"
	}
}
